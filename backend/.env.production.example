# OrthoTrack IoT v3 - Production Environment Configuration
# Copy this file to .env.production and fill in the actual values

# Database Configuration
DB_HOST=orthotrack-postgres
DB_PORT=5432
DB_NAME=orthotrack_prod
DB_USER=orthotrack
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_HERE
DB_SSL_MODE=require

# Redis Configuration
REDIS_HOST=orthotrack-redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_SECURE_REDIS_PASSWORD
REDIS_DB=0
REDIS_POOL_SIZE=20
REDIS_MIN_IDLE_CONNS=10
REDIS_MAX_RETRIES=5

# MQTT Configuration
MQTT_HOST=orthotrack-mqtt
MQTT_PORT=1883
MQTT_BROKER_URL=tcp://orthotrack-mqtt:1883
MQTT_USERNAME=orthotrack
MQTT_PASSWORD=CHANGE_ME_SECURE_MQTT_PASSWORD
MQTT_CLIENT_ID=orthotrack-backend-prod

# JWT Configuration
JWT_SECRET=CHANGE_ME_SUPER_SECRET_JWT_KEY_MINIMUM_64_CHARS_HERE
JWT_EXPIRE_HOURS=24

# Server Configuration
PORT=8080
GIN_MODE=release

# CORS Configuration
ALLOWED_ORIGINS=https://orthotrack.alexptech.com,https://www.orthotrack.alexptech.com,https://api.orthotrack.alexptech.com

# IoT Alert Thresholds
IOT_ALERT_BATTERY_LOW=15
IOT_ALERT_TEMP_HIGH=45.0
IOT_ALERT_TEMP_LOW=5.0
IOT_ALERT_OFFLINE_TIMEOUT=300

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FORMAT=json