# ==============================================
# OrthoTrack IoT Platform v3 - Environment Variables
# ==============================================
# IMPORTANTE: Renomeie este arquivo para .env e configure as variáveis

# ==============================================
# SERVIDOR
# ==============================================
PORT=8080

# ==============================================
# DATABASE (OBRIGATÓRIO)
# ==============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=orthotrack_v3
DB_USER=orthotrack
DB_PASSWORD=CHANGE_THIS_PASSWORD
DB_SSL_MODE=require

# ==============================================
# REDIS
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# JWT (OBRIGATÓRIO - GERE UMA CHAVE SEGURA)
# ==============================================
# Para gerar: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_KEY
JWT_EXPIRE_HOURS=24

# ==============================================
# MQTT (OBRIGATÓRIO PARA PRODUÇÃO)
# ==============================================
MQTT_BROKER_URL=tcp://localhost:1883
MQTT_CLIENT_ID=orthotrack-backend
MQTT_USERNAME=orthotrack
MQTT_PASSWORD=CHANGE_THIS_PASSWORD

# ==============================================
# CORS - ORIGENS PERMITIDAS
# ==============================================
# Separar por vírgula para múltiplas origens
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://dashboard.orthotrack.aacd.org.br

# ==============================================
# AI (OPCIONAL)
# ==============================================
OPENAI_API_KEY=
DEEPSEEK_API_KEY=
AI_DEFAULT_MODEL=openai

# ==============================================
# ALERTAS - THRESHOLDS
# ==============================================
ALERT_BATTERY_LOW=20
ALERT_COMPLIANCE_LOW=80
ALERT_TEMP_HIGH=40
ALERT_TEMP_LOW=5
ALERT_OFFLINE_TIMEOUT=120

# ==============================================
# IoT
# ==============================================
IOT_GATEWAY_ENABLED=true
WEBSOCKET_PORT=8081
TELEMETRY_RETENTION_DAYS=30

# ==============================================
# ESP32 FIRMWARE (para platformio.ini)
# ==============================================
# Estas variáveis são usadas pelo ESP32
WIFI_SSID=YOUR_WIFI_NETWORK
WIFI_PASSWORD=YOUR_WIFI_PASSWORD
API_ENDPOINT=https://api.orthotrack.com
DEVICE_ID=ESP32-001
API_KEY=your-device-api-key